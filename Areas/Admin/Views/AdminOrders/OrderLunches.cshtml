@model WebLanchesMVC.ViewModel.OrderLunchViewModel

@{
    ViewData["Title"] = "OrderLunches";
    decimal totalOrder = 0;
}

<h1>Lanches do Pedido</h1>
<hr />
<h3>Pedido  :  @Html.DisplayFor(model => @Model.Order.Id)</h3>
<h3>Cliente :  @Html.DisplayFor(model => @Model.Order.Name)</h3>
<h3>Data    :  @Html.DisplayFor(model => @Model.Order.OrderSent)</h3>
<h3>Entrega :  @Html.DisplayFor(model => @Model.Order.OrderDelivered)</h3>

<table class="table">
    @foreach (var item in @Model.Order.OrderItems)
    {

        totalOrder += (@item.Lunch.Price * @item.Quantity);

        <tr>
            <td align="right">
                <h3>@Html.DisplayFor(modelItem => item.Lunch.Name)</h3>
            </td>
            <td align="right">
                <img src="@item.Lunch.ImageURL" class="img-fluid" height="100" width="100">
            </td>
            <td align="right">
                <h3>@string.Format("{0:C}", item.Lunch.Price)</h3>
            </td>
            <td align="right">
                <h3>(@Html.DisplayFor(modelItem => item.Quantity))</h3>
            </td>
        </tr>
    }
    <tr>
        <td colspan="2">&nbsp;</td>
        <td align="right">
            <h3>Total do Pedido : @string.Format("{0:C}", @totalOrder)</h3>
        </td>
    </tr>
</table>
<a asp-action="Index" class="btn btn-outline-info">Retornar</a>

