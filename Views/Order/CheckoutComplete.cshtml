	<div class="jumbotron">
		<h2>@ViewBag.CheckoutCompleteMessage</h2>
	</div>

	<div class="card">
		<div class="card-body">
			<p>Cliente</p><strong>@Model.Name</strong>
			<p>Data do Pedido</p><strong>@Model.OrderSent</strong>
